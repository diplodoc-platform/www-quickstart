{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "newLine": "lf",
    "declaration": true,
    "stripInternal": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "~/utils": ["src/utils"],
      "~/models/*": ["src/models/*"],
      "~/resolvers": ["src/resolvers/"],
      "~/resolvers/*": ["src/resolvers/*"],
      "~/configs/*": ["src/configs/*"]
    }
  },
  "include": [
    "src"
  ]
}
